<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/len"
    tools:context=".length">
    <TextView
        android:fontFamily="sans-serif-light"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:text="រង្វាស់ទម្ងន់"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="50dp"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="50dp"
        android:elevation="30dp"
        app:cardCornerRadius="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_height="wrap_content">
            <Spinner

                android:id="@+id/weightopin"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:entries="@array/length"
                android:layout_weight="2"
                android:layout_height="50dp"/>

            <Spinner
                android:id="@+id/weightopout"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:entries="@array/length"
                android:layout_width="wrap_content"
                android:layout_weight="2"
                android:layout_height="50dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="4"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/inputweight"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="20dp"/>
            <EditText
                android:id="@+id/outputweight"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textSize="20dp"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/convertweight"
        android:background="@drawable/button"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Convert"/>
    <androidx.cardview.widget.CardView
        android:padding="30dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="10dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:id="@+id/incapweight"
                    android:padding="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="100dp"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_purple"
                    android:text="តឹក"
                    android:layout_gravity="center"
                    android:gravity="center"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:textStyle="italic"
                android:id="@+id/inintroweight"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:textColor="@android:color/holo_green_dark"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="hello"
                android:layout_gravity="center"/>
            <View
                android:layout_width="match_parent"
                android:background="@android:color/holo_red_light"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_height="1dp"/>
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="10dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/outcapweight"
                    android:padding="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="100dp"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_blue_light"
                    android:text="តឹក"
                    android:layout_gravity="center"
                    android:gravity="center"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:textStyle="italic"
                android:textColor="@android:color/holo_red_light"
                android:layout_marginTop="10dp"
                android:id="@+id/outintroweight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="hello"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>




</LinearLayout>